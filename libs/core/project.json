{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/libs/core/src"],
      "options": {
        "command": "nx run core:build-with-types"
      }
    },
    "build-src": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "format": ["esm", "cjs"],
      "platform": "browser",
      "options": {
        "packageJson": "libs/core/package.json",
        "outputPath": "dist/libs/core/src",
        "main": "libs/core/src/index.ts",
        "additionalEntryPoints": ["libs/core/src/lit-styleguide.ts"],
        "tsConfig": "libs/core/tsconfig.lib.json",
        "assets": [
          {
            "glob": "README.md",
            "input": ".",
            "output": "."
          }
        ],
        "updateBuildableProjectDepsInPackageJson": false,
        "esbuildConfig": "libs/core/esbuild.config.cjs"
      }
    },
    "build-with-types": {
      "executor": "nx:run-commands",
      "dependsOn": ["build-src"],
      "options": {
        "command": "tsc --emitDeclarationOnly --declaration --project libs/core/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/core/**/*.ts", "libs/core/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/core/jest.config.ts"
      }
    },
    "version-and-release": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "commitMessageFormat": "chore({projectName}): release version ${version}",
        "tagPrefix": "@sebgroup/green-{projectName}@",
        "push": true,
        "postTargets": ["react:publish", "react:github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "{workspaceRoot}/dist/libs/react/src"
      }
    }
  },
  "tags": []
}
